<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.live.communityskyeye.add_surface">

    <TextView
        android:id="@+id/add_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/add_place"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="93dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="76dp"
        android:padding="10dp"
        android:text="请添加:"
        android:textSize="18sp" />


    <EditText
        android:id="@+id/add_place"
        android:layout_width="100dp"
        android:layout_height="61.8dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/add_tv"
        android:layout_marginStart="50dp"
        android:layout_marginTop="240dp"
        android:padding="20dp"
        android:hint="监控点"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="114dp" />

    <Button
        android:id="@+id/save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存"
        android:layout_marginStart="25dp"
        android:layout_alignBaseline="@+id/add_place"
        android:layout_alignBottom="@+id/add_place"
        android:layout_toEndOf="@+id/add_place" />


</RelativeLayout>
